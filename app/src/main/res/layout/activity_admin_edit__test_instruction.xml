<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context="com.example.itifighterAdmin.admin_edit_TestInstruction">

    <EditText
        android:id="@+id/EditTestInstruction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:hint="write text instructions here... (displayed before beginning of any test)"/>

    <Button
        android:id="@+id/SaveTestInstructionEdit"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="Save"
        android:onClick="SaveInstructions"/>

</androidx.appcompat.widget.LinearLayoutCompat>