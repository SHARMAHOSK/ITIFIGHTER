<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="150"
    android:background="@drawable/bg_login"
    tools:context="com.example.itifighterAdmin.admin_add_chapter">

    <EditText
        android:id="@+id/NewChapterName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="#00000000"
        android:hint="chapter name"
        android:textColor="#FFFFFF"
        android:textColorHint="#C0C0C0"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">
        <LinearLayout
            android:id="@+id/ChapterDataTypeOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">
            <EditText
                android:id="@+id/NewChapterDesc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:background="#00000000"
                android:hint="chapter desc"
                android:textColor="#FFFFFF"
                android:textColorHint="#C0C0C0"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/NewChapterPrice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:background="#00000000"
                android:hint="chapter price"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                android:textColorHint="#C0C0C0"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/NewChapterDiscount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:background="#00000000"
                android:hint="chapter discount"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                android:textColorHint="#C0C0C0"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/NewChapterMPQ"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:background="#00000000"
                android:hint="marks per question"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#C0C0C0"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/NewChapterTimer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:background="#00000000"
                android:hint="test duration(in minutes)"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#C0C0C0"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ChapterDataTypeTwo"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="10"
                android:weightSum="7">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Option"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Months"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Price"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Discount"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="30"
                android:weightSum="7">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/TSCM1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:inputType="number"
                    android:layout_weight="2"/>
                <EditText
                    android:id="@+id/TSCP1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:inputType="number"
                    android:layout_weight="2"/>
                <EditText
                    android:id="@+id/TSCD1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:inputType="number"
                    android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="30"
                android:weightSum="7">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/TSCM2"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:inputType="number"
                    android:layout_weight="2"/>
                <EditText
                    android:id="@+id/TSCP2"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:inputType="number"
                    android:layout_weight="2"/>
                <EditText
                    android:id="@+id/TSCD2"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:inputType="number"
                    android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="30"
                android:weightSum="7">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/TSCM3"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:inputType="number"
                    android:layout_weight="2"/>
                <EditText
                    android:id="@+id/TSCP3"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:inputType="number"
                    android:layout_weight="2"/>
                <EditText
                    android:id="@+id/TSCD3"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:inputType="number"
                    android:layout_weight="2"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/AddChapterImage"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_gravity="center"
        app:srcCompat="@android:drawable/ic_input_add"
        android:onClick="PickNewChapImage"/>

    <Button
        android:id="@+id/SaveNewChapter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:text="SAVE NEW CHAPTER"
        android:onClick="SaveNewChapter"/>
</LinearLayout>