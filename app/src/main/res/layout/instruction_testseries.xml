<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".TestInstructionsActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables">
    <ImageView
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_gravity="center"
        android:src="@drawable/checked"
        android:contentDescription="@string/todo" />
    <TextView
        android:id="@+id/examTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="start"
        android:padding="10sp"
        android:text="IBPS (Mock Test)"
        android:textSize="20sp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10sp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_margin="10sp"
            android:orientation="vertical"
            android:background="@drawable/rounded_text">
            <TextView
                android:id="@+id/TQuesX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:textColor="@color/black"
                tools:ignore="SmallSp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quetions"
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:textColor="@color/black_overlay"
                tools:ignore="SmallSp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_margin="10sp"
            android:orientation="vertical"
            android:background="@drawable/rounded_text">
            <TextView
                android:id="@+id/TMarksY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:textColor="@color/black"
                tools:ignore="SmallSp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marks"
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:textColor="@color/black_overlay"
                tools:ignore="SmallSp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_margin="10sp"
            android:orientation="vertical"
            android:background="@drawable/rounded_text">
            <TextView
                android:id="@+id/TMinZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:textColor="@color/black"
                tools:ignore="SmallSp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minutes"
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:textColor="@color/black_overlay"
                tools:ignore="SmallSp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/examInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:text="Instruction"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details2" />

    <WebView
        android:id="@+id/webXview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="@dimen/dimen_20dp"
        android:layout_marginTop="10dp"
        android:layout_margin="5dp"
        android:scrollbars="vertical"
        android:isScrollContainer="true"
        android:nestedScrollingEnabled="true"
        android:background="@color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/InsCBX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I have read all instructions"
            android:textSize="14sp"/>
        <Button
            android:id="@+id/startExam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/startblue"
            android:onClick="BeginTest"
            android:text="start"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>