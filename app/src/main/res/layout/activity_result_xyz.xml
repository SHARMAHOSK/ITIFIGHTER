<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".TestResultActivity">
    <LinearLayout
        android:id="@+id/ResultLL"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/resultX"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@color/white"
                android:padding="10sp"
                android:layout_margin="10sp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:gravity="center"
                app:drawableEndCompat="@drawable/cross" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_margin="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/score"
                android:textColor="#4C4A4A"
                android:paddingStart="35dp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                tools:ignore="RtlSymmetry" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_text">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:textColor="#4C4A4A"
                        android:id="@+id/marksObtained"
                        tools:ignore="SmallSp"/>
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="2dp"
                        android:background="#4C4A4A"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginBottom="@dimen/dimen_15dp"
                        android:textColor="#4C4A4A"
                        android:id="@+id/totalMarks"
                        tools:ignore="SmallSp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_10dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/checked"
                            android:contentDescription="@string/todo" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black_overlay"
                            android:layout_marginStart="@dimen/dimen_15dp"
                            android:id="@+id/TCA"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_10dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/cancel"
                            android:contentDescription="@string/todo" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black_overlay"
                            android:layout_marginStart="@dimen/dimen_15dp"
                            android:id="@+id/TRA"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_10dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/skipped"
                            android:contentDescription="@string/todo" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black_overlay"
                            android:layout_marginStart="@dimen/dimen_15dp"
                            android:id="@+id/TSQ"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_margin="10sp"
                android:layout_marginTop="@dimen/dimen_15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/analysis"
                android:textColor="#4C4A4A"
                android:paddingStart="35dp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                tools:ignore="RtlSymmetry" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:gravity="center"
                    android:layout_margin="@dimen/dimen_15dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_text">
                    <TextView
                        android:id="@+id/Accuracy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:textColor="#4C4A4A"
                        tools:ignore="SmallSp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/percent"
                        android:textSize="15sp"
                        android:layout_marginBottom="@dimen/dimen_15dp"
                        android:textColor="@color/black_overlay"
                        tools:ignore="SmallSp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:gravity="center"
                    android:layout_margin="@dimen/dimen_15dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_text">
                    <TextView
                        android:id="@+id/TimePerQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:textColor="#4C4A4A"
                        tools:ignore="SmallSp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/second"
                        android:textSize="15sp"
                        android:layout_marginBottom="@dimen/dimen_15dp"
                        android:textColor="@color/black_overlay"
                        tools:ignore="SmallSp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue2"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_marginEnd="@dimen/dimen_15dp"
                    android:text="@string/accuracy"/>
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue2"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_marginEnd="@dimen/dimen_15dp"
                    android:text="@string/time_quetion"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:gravity="center|bottom"
                android:orientation="vertical">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/blue2"
                    android:onClick="CheckAnswerSheet"
                    android:text="@string/view_solution"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_margin="4dp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/blue2"
                    android:text="@string/view_leader_board"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_margin="4dp"
                    android:onClick="CheckLeaderBoard"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/blue2"
                    android:text="@string/re_take_exam"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_margin="4dp"
                    android:onClick="TakeARetest"/>

            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/ContinueBTNRT"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/blue2"
            android:text="@string/close"
            android:visibility="invisible"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_margin="4dp"
            android:onClick="FinishExam"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/UploadingTXT"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:visibility="invisible"
        android:layout_height="match_parent"
        android:src="@drawable/resultw"
        android:gravity="center"
        android:contentDescription="@string/todo" />

</RelativeLayout>
