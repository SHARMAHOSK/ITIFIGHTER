<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/dimen_15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/score"
        android:textColor="#4C4A4A"
        android:paddingStart="35dp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_15dp"
        tools:ignore="RtlSymmetry" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/rounded_text">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:textColor="#4C4A4A"
                android:id="@+id/mark"
                tools:ignore="SmallSp"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:background="#4C4A4A"
                tools:ignore="SmallSp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="20sp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:textColor="#4C4A4A"
                tools:ignore="SmallSp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/checked"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_overlay"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:text="0 Correct"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/cancel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_overlay"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:text="12 Incorrect"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/skipped"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_overlay"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:text="0 Skipped"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/dimen_15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Analysis"
        android:textColor="#4C4A4A"
        android:paddingStart="35dp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_15dp"
        tools:ignore="RtlSymmetry" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_15dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_text">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:textColor="#4C4A4A"
                tools:ignore="SmallSp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Percent"
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:textColor="@color/black_overlay"
                tools:ignore="SmallSp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_15dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_text">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:textColor="#4C4A4A"
                tools:ignore="SmallSp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second"
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:textColor="@color/black_overlay"
                tools:ignore="SmallSp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/blue2"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:text="Accuracy"/>
        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@color/blue2"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:text="Time / Quetion"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:gravity="center|bottom"
        android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blue2"
        android:text="View Solution"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="4dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/blue2"
            android:text="View Leader Board"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_margin="4dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/blue2"
            android:text="View Rank Board"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_margin="4dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/blue2"
            android:text="Re-Take Exam"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_margin="4dp"/>

    </LinearLayout>

</LinearLayout>
