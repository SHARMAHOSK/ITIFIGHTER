<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ViewSolutionXyz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center|start"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/SheetIndex"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded_text"
                    android:backgroundTint="@color/black_overlay"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/SheetResponseTag"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|end"
                    android:background="@drawable/circle2"
                    android:backgroundTint="@android:color/holo_green_dark"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="166dp"
                    tools:layout_editor_absoluteY="0dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/SheetQues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_15dp"/>
            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:background="#DEFDC8"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_text"
            android:backgroundTint="@color/green1"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_gravity="center|start"
            android:text="A"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/SheetOption1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="start"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/dimen_20dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/SheetCheck1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/todo" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_text"
            android:backgroundTint="@color/grey"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_gravity="center|start"
            android:text="B"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/SheetOption2"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="start"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/dimen_20dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/SheetCheck2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/todo" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:background="#FDC8C8"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_text"
            android:backgroundTint="@color/grey"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_gravity="center|start"
            android:text="C"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/SheetOption3"
            android:layout_width="220sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="start"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/dimen_20dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/SheetCheck3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/todo" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_text"
            android:backgroundTint="@color/grey"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_gravity="center|start"
            android:text="D"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/SheetOption4"
            android:layout_width="220sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="start"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/dimen_20dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/SheetCheck4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cancel"
                android:contentDescription="@string/todo" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/black_overlay"
            android:layout_margin="10sp"
            tools:ignore="SmallSp" />
    </LinearLayout>
</LinearLayout>